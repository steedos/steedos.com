<div class=" bg-white">

    <div class="navbar bg-base-10 max-w-8xl mx-auto px-8 text-base">
        <div class="navbar-start">
            <div class="dropdown">
                <div tabindex="0" role="button" class="btn btn-ghost lg:hidden">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16" />
                    </svg>
                </div>
                <ul tabindex="0" class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 w-52 p-2 shadow">
                    {% comment %} <li><a>Item 1</a></li>
                    <li>
                        <a>Parent</a>
                        <ul class="p-2">
                            <li><a>Submenu 1</a></li>
                            <li><a>Submenu 2</a></li>
                        </ul>
                    </li>
                    <li><a>Item 3</a></li> {% endcomment %}
    
                    {% for tab in tabs %}
                        <li>
                            <a href="{{ tab.url }}"
                                class="text-base font-medium ">{{
                                tab.name }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <a href="/{{ slug }}" class="text-xl font-semibold whitespace-nowrap lg:border-r lg:border-black/10 lg:pr-6">{{name}}</a>
            <ul class="menu menu-horizontal px-1 hidden lg:flex lg:pl-6">
                {% for tab in tabs %}
                    <li>
                        <a href="{{ tab.url }}"
                            class="text-base font-medium ">{{
                            tab.name }}</a>
                    </li>
                {% endfor %}
                {% comment %} <li><a>Item 1</a></li>
                <li>
                    <details>
                        <summary>Parent</summary>
                        <ul class="p-2">
                            <li><a>Submenu 1</a></li>
                            <li><a>Submenu 2</a></li>
                        </ul>
                    </details>
                </li>
                <li><a>Item 3</a></li> {% endcomment %}
            </ul>
        </div>
        <div class="navbar-center">
            
        </div>
        <div class="navbar-end">
            <a class="btn btn-ghost" href="tel://4008201612">400-820-1612</a>
        </div>
    </div>
</div>